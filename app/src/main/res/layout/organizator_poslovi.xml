<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".organizator.OrganizatorPoslovi">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="Dodaj posao"
            android:visibility="invisible"
            android:textColorHighlight="#000000"
            android:textSize="21sp" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewPoslovi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:scrollbars="vertical"
            android:layout_below="@id/textView"/>
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recyclerViewPoslovi"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="Moji poslovi"
            android:textColorHighlight="#000000"
            android:textSize="21sp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewPoslovi2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:scrollbars="vertical"
            android:layout_below="@id/textView2"/>




    </RelativeLayout>

</ScrollView>